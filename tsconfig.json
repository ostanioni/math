{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": false,
    "charset": "utf8",
    "locale": "ru",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": false,
    "outDir": "./dist/ts",
    "pretty": true,
    "lib": ["dom", "dom.iterable", "scripthost", "esnext"],
    "baseUrl": "./src",
    "paths": {
      "components": ["/components"],
      "themes": ["/themes"],
      "styles": ["/styles"]
    }
  },
  "plugins": [
    {
      "name": "typescript-styled-plugin",
      "tags": [
        "styled",
        "css",
        "injectGlobal",
        "createGlobalStyle",
        "keyframes"
      ]
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist", "public", ".vscode"]
}
